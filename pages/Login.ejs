            <main class="row justify-content-center align-items-center mb-3">

                <div class="col-11 col-md-8 col-lg-4 bg-light rounded shadow p-2 p-lg-5">
                    <form id="LoginForm">

                        <h1 class="h3 mb-3 fw-normal text-center mb-5">Login To Your Account</h1>


                        <div class="my-3">
                            <input type="text" class="form-control py-3 ps-4 rounded-pill" id="email" name="email" placeholder="Email Address *">
                            <i id="email-error" class="px-2"></i>
                        </div>


                        <div class=" mb-3">
                           
                            <div class="input-group rounded-pill" id="passcont">
                                
                              <input type="password" class="form-control py-3 ps-4 rounded-start-pill" id="password" name="password" placeholder="Password *">
                              
                              <span class="input-group-text rounded-end-pill px-3" onclick="togglePasswordVisibility()" style="cursor: pointer;">
                                <img id="eyeIcon" class="eye-icon" src="/assects/icons/eye-closed-svgrepo-com (1).svg" width="25" height="25">
                              </span>

                            </div>
                            <i id="password-error" class="px-2"></i>
                            
                            
                            <!-- <i id="passwordError" class="error-message"></i> -->
                        </div>
                        <div class="w-100 d-flex justify-content-end" style="font-size: 13px;">
                            <a href="/user/reset-password">Forgot Password ?</a>

                        </div>




                        <button class="btn btn-primary w-100 mybtn rounded-pill" type="submit">
                            <span id="text">Login</span>
                            <div class="spinner" id="loader" style="display: none;"></div>
                        </button>

                        

                    </form>
                    <div class="mt-3 fs-5">
                        <p class="text-center">Don't have an account? <a href="/user/sign-up" class="text-primary"><i>Sign up</i></a></p>
                    </div>
                </div>
            </main>
            <script>
                function togglePasswordVisibility() {
                    const passwordInput = document.getElementById('password');
                    const eyeIcon = document.getElementById('eyeIcon');

                    // Toggle the type of the password input between 'password' and 'text'
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        eyeIcon.src = '/assects/icons/eye-open-svgrepo-com (1).svg'; // Closed eye icon
                    } else {
                        passwordInput.type = 'password';
                        eyeIcon.src = '/assects/icons/eye-closed-svgrepo-com (1).svg'; // Open eye icon
                    }
                }


            </script>


            <script type="module">
                import {handleFormSubmission} from '/js/DataUploader.js'

                function validateEmail(){
                   const email = document.getElementById("email")
                   const emailError= document.getElementById("email-error")
                   const emailFormat = /^[^\s@]+@[^\s@]+\.[^\s@]+$/

                    if(!email.value){
                        emailError.textContent="Email Required"
                        email.classList.add('input-error')
                        emailError.classList.add('error')
                        return false
                    }else if(!email.value.match(emailFormat)){
                        emailError.textContent="Email Format Invalid"
                        email.classList.add('input-error')
                        emailError.classList.add('error')
                        return false
                    }else{
                        email.classList.remove('input-error')
                        emailError.classList.remove('error')
                        emailError.textContent= null
                        
                        return true
                    }

                }

                function validatePassowrd(){
                    const password = document.getElementById('password')
                    const passwordError= document.getElementById("password-error")
                    const passwordCon = document.getElementById('passcont')
                    
                    const passworformat = /^(?=.*[a-z])(?=.*\d)(?=.*[!@#\$%\^&])[a-zA-Z0-9!@#\$%\^&]{3,20}$/;


                    if(!password.value){
                        passwordCon.classList.add('input-error')
                        passwordError.classList.add('error')
                        passwordError.textContent="Password Required"
                        return false
                    }else if(password.value.length < 8){
                        passwordCon.classList.add('input-error')
                        passwordError.classList.add('error')
                        passwordError.textContent="Password shouldn't be less than 8 characters"
                        return false
                    }else if(!password.value.match(passworformat)){
                        passwordCon.classList.add('input-error')
                        passwordError.classList.add('error')
                        passwordError.textContent="Password must contain at least one special character and digit"
                        return false
                    }else{
                        passwordCon.classList.remove('input-error')
                        passwordError.classList.remove('error')
                        passwordError.textContent= null
                        return true
                    }
                }

                function startSubmission(e){
                    e.preventDefault()
                    let emailValid = validateEmail()
                    let passwordValid = validatePassowrd()
                    if(emailValid && passwordValid){
                        const loginForm = document.getElementById('LoginForm');
                        handleFormSubmission(loginForm, '/user/log-in');

                    }
                }

                document.getElementById('LoginForm').addEventListener('submit',(e)=>startSubmission(e))

                
            </script>



