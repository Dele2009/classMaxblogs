<!DOCTYPE html>
<html lang="en">

<%-include('./components/head')%>

    <body>
        <%-include('./components/header')%>
        <%-include('./components/Alertbox')%>

            <main class="row justify-content-center align-items-center mb-5">
                <div class="col-11 col-md-8 col-lg-4 bg-light rounded shadow p-2">
                    <form id="SignUpForm" enctype="multipart/form-data">

                        <h1 class="h3 mb-3 fw-normal text-center">Register to Become a writer</h1>

                        <div class=" my-3">
                            <input type="text" class="form-control ps-4 py-3 rounded-pill" id="name" name="name" placeholder="Name *">
                            
                            <i id="nameError" class="error-message"></i>
                        </div>

                        <div class="my-3">
                            <input type="email" class="form-control ps-4 py-3 rounded-pill" id="email" name="email" placeholder="Email Address *">
                           
                            <i id="emailError" class="error-message"></i>
                        </div>

                        <div class="input-group my-3">
                           
                            <span class="input-group-text rounded-start-pill">
                                Upload Profile-Picture
                            </span>
                            <input type="file" class="form-control ps-4 py-3 rounded-end-pill" id="avatar" name="avatar" placeholder="Upload Profile-Picture">
                            
                            <i id="emailError" class="error-message"></i>
                        </div>

                        <div class="">
                           
                            <div class="input-group mb-3">
                                
                              <input type="password" class="form-control ps-4 py-3 rounded-start-pill" id="password" name="password" placeholder="Password *">
                              <span class="input-group-text rounded-end-pill px-3 " onclick="togglePasswordVisibility()">
                                <img id="eyeIcon" class="eye-icon" src="/assects/icons/eye-closed-svgrepo-com (1).svg" width="25" height="25">
                              </span>

                            </div>
                            
                            <!-- <i id="passwordError" class="error-message"></i> -->
                        </div>





                        <button class="btn btn-primary w-100 mybtn rounded-pill" type="submit">
                            <span id="text">Register</span>
                            <div class="spinner" id="loader" style="display: none;"></div>
                        </button>

                        

                    </form>
                    <div class="mt-3 fs-5">
                        <p class="text-center">Already have an account? <a href="/user/log-in" class="text-primary"><i>login</i></a></p>
                    </div>
                </div>
            </main>

            <script>
                function togglePasswordVisibility() {
                    const passwordInput = document.getElementById('password');
                    const eyeIcon = document.getElementById('eyeIcon');

                    // Toggle the type of the password input between 'password' and 'text'
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        eyeIcon.src = '/assects/icons/eye-open-svgrepo-com (1).svg'; // Closed eye icon
                    }else{
                    passwordInput.type = 'password';
                    eyeIcon.src = '/assects/icons/eye-closed-svgrepo-com (1).svg'; // Open eye icon
                    }
                }


            </script>

            <script type="module">

                
                import {handleFormSubmission} from '/js/DataUploader.js'

                const signUpForm = document.getElementById('SignUpForm');
                handleFormSubmission(signUpForm, '/user/sign-up');

            </script>
    </body>

</html>