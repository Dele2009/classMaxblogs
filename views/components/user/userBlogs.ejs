
<% if(Blogs.length>0){ %>
    <%Blogs.map(blog=>{%>

        <!-- card style 1 -->

        <div class="col-12 col-md-6 col-lg-4" style="height: fit-content;">
            <div class="card mb-4 border-0 shadow">
                <a href="/blogs/<%=blog._id%>"><img class="card-img-top"
                        loading="lazy" src="<%=blog.heroimage_info.url%>" alt="<%=blog.title%>_img"  width="700" height="200" onerror="this.src='/assects/images/max-blog-placeholder.jpg'"/></a>
                <div class="card-body">
                    
                    
                    <%const createdAt = new Date( blog.createdAt )%>
                    <%const relativeTime = formatDistanceToNow(createdAt, { addSuffix: true })%>
                        
                   
                    <div class="small text-muted">Created <%=relativeTime.replace('about ', '')%></div>
                    <h2 class="card-title h4"><%=blog.title%></h2>
                    <div class="d-flex justify-content-between align-items-center">
                        <a class="btn btn-primary" href="/blogs/<%=blog._id%>"><i class="fas fa-eye"></i> → </a>
                        <button id="" class="btn btn-danger btn-action deleteReq" data-mx-route="<%=blog._id%>" data-mx-title="<%=blog.title%>" data-toggle="modal" data-target="#deleteModal">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button class="btn btn-warning btn-action" data-mx-route="<%=blog._id%>" data-mx-actiom="DELETE">
                            <i class="fas fa-edit"></i>
                        </button>

                    </div>
                    
                </div>
            </div>
        </div>


        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">You want to delete this blog</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Please type <i>"<span id="blog-name"></span>"</i> to delete this blog
                        <div class="mt-3">
                            <input type="text" class="form-control ps-4 py-3 rounded-end" id="delete-input" placeholder="Type here....">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn bg-gradient-primary" type="button" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-danger" disabled id="deleteAction">
                           Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

